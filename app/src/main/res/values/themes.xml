<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Assignment_PRM_SU25" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorHint">@color/textHint</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        
        <!-- CardView style -->
        <item name="cardViewStyle">@style/Widget.App.CardView</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.Assignment_PRM_SU25" parent="Base.Theme.Assignment_PRM_SU25" />
    
    <!-- Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="background">@drawable/btn_primary</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- TextInputLayout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Box Stroke -->
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        
        <!-- Box Background -->
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        
        <!-- Corner Radius -->
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        
        <!-- Hint -->
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        
        <!-- Error -->
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/TextAppearance.App.TextInputError</item>
        <item name="errorTextColor">@color/error</item>
        
        <!-- Counter -->
        <item name="counterTextAppearance">@style/TextAppearance.App.CounterText</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.App.CounterOverflow</item>
        
        <!-- Padding -->
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    
    <!-- TextInputLayout Text Appearance -->
    <style name="TextAppearance.App.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textHint</item>
    </style>
    
    <!-- TextInputLayout Error Text Appearance -->
    <style name="TextAppearance.App.TextInputError" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/error</item>
    </style>
    
    <!-- Counter Text Appearance -->
    <style name="TextAppearance.App.CounterText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>
    
    <!-- Counter Overflow Text Appearance -->
    <style name="TextAppearance.App.CounterOverflow" parent="TextAppearance.App.CounterText">
        <item name="android:textColor">@color/error</item>
    </style>
    
    <!-- Social Login Button Style -->
    <style name="Widget.App.Button.Social" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/gray_light</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
    </style>
    
    <!-- Text Link Style -->
    <style name="Widget.App.TextLink" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <!-- CardView Style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    
    <!-- TabLayout Text Appearance -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="textAllCaps">true</item>
    </style>
    
    <!-- Toolbar Title Text Appearance -->
    <style name="TextAppearance.App.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Floating Action Button Style -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">6dp</item>
        <item name="rippleColor">@color/primary_dark</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">normal</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector</item>
        <item name="itemRippleColor">@color/primary_light</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.App.BottomNavigationView.Inactive</item>
        <item name="itemIconSize">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <style name="TextAppearance.App.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="TextAppearance.App.BottomNavigationView.Active" parent="TextAppearance.App.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.App.BottomNavigationView.Inactive" parent="TextAppearance.App.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>